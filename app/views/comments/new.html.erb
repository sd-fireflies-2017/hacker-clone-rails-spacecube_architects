<h1>What do you have to say about this bullshit?</h1>

<%= form_for :comment, url: post_comments_path(@comment.post), method: :post  do |f| %>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, cols: "40", rows: "8", value: @comment.body %>
  </p>
  <p>
    <%= f.submit value: "Create" %>
  </p>
<% end %>
