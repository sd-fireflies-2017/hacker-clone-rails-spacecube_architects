<h1>Create new Post</h1>

<%= form_for :post, url: posts_path, method: :post  do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, size: "40", value: @post.title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, cols: "40", rows: "8", value: @post.body %>
  </p>
  <p>
    <%= f.submit value: "Create" %>
  </p>
<% end %>
